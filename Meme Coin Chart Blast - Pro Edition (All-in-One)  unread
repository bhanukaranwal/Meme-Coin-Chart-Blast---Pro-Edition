        }
        @keyframes pulse-red {
            0%, 100% { transform: scale(1); color: #f87171; text-shadow: 0 0 10px #f87171; }
            50% { transform: scale(1.15); color: #fca5a5; text-shadow: 0 0 20px #fca5a5; }
        }
        @keyframes shake {
            0%, 100% { transform: translateX(0); }
